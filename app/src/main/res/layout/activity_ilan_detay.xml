<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:alpha="0.9"
            app:cardBackgroundColor="@color/cardview_light_background"
            app:cardCornerRadius="6dp"
            app:cardElevation="6dp"
            tools:layout_editor_absoluteX="5dp"
            tools:layout_editor_absoluteY="5dp">


            <FrameLayout
                android:id="@+id/frameLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.38">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <RelativeLayout
                        android:id="@+id/sliderIlanDetay"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:layout_margin="3dp"
                        android:orientation="vertical">

                        <androidx.viewpager.widget.ViewPager
                            android:id="@+id/ilanDetaySlider"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/white"></androidx.viewpager.widget.ViewPager>

                        <me.relex.circleindicator.CircleIndicator

                            android:id="@+id/sliderCircle"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_alignParentBottom="true"
                            app:ci_drawable="@color/white"
                            app:ci_drawable_unselected="@color/black">

                        </me.relex.circleindicator.CircleIndicator>

                    </RelativeLayout>

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="3dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:padding="5dp"
                                    android:text="Başlık :"
                                    android:textColor="@color/black"
                                    android:textSize="20dp"
                                    android:textStyle="bold"></TextView>

                                <TextView
                                    android:id="@+id/lblIlanBaslikDetay"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="right"
                                    android:padding="5dp"
                                    android:text="Başlık "
                                    android:textColor="#9E58DC"
                                    android:textSize="20dp"
                                    android:textStyle="bold"></TextView>


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:padding="5dp"
                                    android:text="Fiyat :"
                                    android:textColor="@color/black"
                                    android:textSize="20dp"
                                    android:textStyle="bold"></TextView>

                                <TextView
                                    android:id="@+id/lblIlanDetayFiyat"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="right"
                                    android:padding="5dp"
                                    android:text="Fiyat "
                                    android:textColor="#9E58DC"
                                    android:textSize="20dp"
                                    android:textStyle="bold"></TextView>


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:padding="5dp"
                                    android:text="Kategori :"
                                    android:textColor="@color/black"
                                    android:textSize="20dp"
                                    android:textStyle="bold"></TextView>

                                <TextView
                                    android:id="@+id/lblIlanDetayKategori"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="right"
                                    android:padding="5dp"
                                    android:text="Kategori "
                                    android:textColor="#9E58DC"
                                    android:textSize="20dp"
                                    android:textStyle="bold"></TextView>


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:padding="5dp"
                                    android:text="Durumu :"
                                    android:textColor="@color/black"
                                    android:textSize="20dp"
                                    android:textStyle="bold"></TextView>

                                <TextView
                                    android:id="@+id/lblIlanDetayDurunu"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="right"
                                    android:padding="5dp"
                                    android:text="Durumu "
                                    android:textColor="#9E58DC"
                                    android:textSize="20dp"
                                    android:textStyle="bold"></TextView>


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:padding="5dp"
                                    android:text="Açıklama"
                                    android:textColor="@color/black"
                                    android:textSize="20dp"
                                    android:textStyle="bold"></TextView>

                                <TextView
                                    android:id="@+id/lblIlanDetayAciklama"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:padding="5dp"
                                    android:text="Açıklama "
                                    android:textColor="#9E58DC"
                                    android:textSize="20dp"
                                    android:textStyle="bold"></TextView>


                            </LinearLayout>

                        </LinearLayout>

                    </ScrollView>

                </LinearLayout>

            </FrameLayout>

        </androidx.cardview.widget.CardView>


        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:clickable="true"
            android:focusable="true"
            android:id="@+id/open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#AB47BC"
            android:src="@drawable/ic_baseline_playlist_add_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="MissingConstraints" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:clickable="true"
            android:focusable="true"
            android:visibility="invisible"
            android:id="@+id/mesajAt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:backgroundTint="#AB47BC"
            android:src="@drawable/ic_baseline_post"
            app:layout_constraintBottom_toTopOf="@+id/call"
            app:layout_constraintEnd_toEndOf="@+id/call"
            tools:ignore="MissingConstraints" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:clickable="true"
            android:focusable="true"
            android:visibility="invisible"
            android:id="@+id/call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:backgroundTint="#AB47BC"
            android:src="@drawable/ic_baseline_call_24"
            app:layout_constraintBottom_toTopOf="@+id/favoriEkle"
            app:layout_constraintEnd_toEndOf="@+id/favoriEkle"
            tools:ignore="MissingConstraints" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:clickable="true"
            android:focusable="true"
            android:visibility="invisible"
            android:id="@+id/favoriEkle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:backgroundTint="#AB47BC"
            android:src="@drawable/ic_un_favorite_border_24"
            app:layout_constraintBottom_toTopOf="@+id/open"
            app:layout_constraintEnd_toEndOf="@+id/open"
            tools:ignore="MissingConstraints">

        </com.google.android.material.floatingactionbutton.FloatingActionButton>

    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>