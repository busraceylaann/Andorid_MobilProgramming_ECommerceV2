<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.sananelazimv2">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SanaNeLazimV2"
        android:usesCleartextTraffic="true">
        <activity android:name=".HakkimizdaActivity"
            android:label="Şikayet ve Önerileriniz"
            android:parentActivityName=".HomeActivity"></activity>
        <activity
            android:name=".SearchActivity"
            android:label="İlan Ara"
            android:parentActivityName=".HomeActivity" />
        <activity
            android:name=".SplashScreenActivity"
            android:theme="@style/FullScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".IlanResimDuzenlemeActivity"
            android:parentActivityName=".IlanBilgiUpdateActivity" />
        <activity
            android:name=".IlanBilgiUpdateActivity"
            android:parentActivityName=".IlanlarimActivity" />
        <activity
            android:name=".IlanlarimActivity"
            android:parentActivityName=".HomeActivity" />
        <activity
            android:name=".AccountActivity"
            android:label="Kullanıcı İşlemleri"
            android:parentActivityName=".HomeActivity" />
        <activity
            android:name=".ActivityChat"
            android:theme="@style/FullScreen" />
        <activity
            android:name=".IlanDetayActivity"
            android:parentActivityName=".HomeActivity" />
        <activity
            android:name=".IlanResimVerActivity"
            android:theme="@style/FullScreen" />
        <activity
            android:name=".IlanVerActivity"
            android:label="@string/ilanver_name"
            android:parentActivityName=".HomeActivity" />
        <activity
            android:name=".HomeActivity"
            android:label="@string/title_activity_home"
            android:theme="@style/Theme.SanaNeLazimV2.NoActionBar" />
        <activity
            android:name=".RegisterActivity"
            android:label="@string/register_name"
            android:parentActivityName=".LoginActivity"
            android:theme="@style/RegisterScreen">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".LoginActivity" />
        </activity>
        <activity
            android:name=".LoginActivity"
            android:theme="@style/FullScreen" />
    </application>

</manifest>